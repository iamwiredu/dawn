<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    <title>{{ page_title }}{% if current_tags %} &ndash; {{ 'general.meta.tags' | t: tags: current_tags | join: ', ' }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>
    
    {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    
    <link rel="canonical" href="{{ canonical_url }}">

    {% if settings.favicon != blank %}
    <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
    {% endif %}

    {% comment %} CSS will be in assets/styles.css.liquid {% endcomment %}
    {{ 'styles.css' | asset_url | stylesheet_tag }}

    <style>
        /* Glassy Slide-in Menu Styles */
        .menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }
        .menu-overlay.active {
            opacity: 1;
            visibility: visible;
        }
        .slide-menu {
            position: fixed;
            top: 0;
            left: 0;
            width: 350px;
            height: 100vh;
            background: rgba(255, 255, 255, 0.954);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.2);
            z-index: 1000;
            transform: translateX(-100%);
            transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            padding: 2rem;
            display: flex;
            flex-direction: column;
            color: black;
        }
        .slide-menu.active {
            transform: translateX(0);
        }
        .menu-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 3rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }
        .menu-logo {
            color: rgb(0, 0, 0);
            font-size: 1.5rem;
            font-weight: 300;
            letter-spacing: 2px;
        }
        .menu-close {
            background: none;
            border: none;
            color: rgb(0, 0, 0);
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 50%;
            transition: background 0.3s ease;
        }              
        .menu-nav {
            flex: 1;
            overflow-y: scroll;
        }
        .menu-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .menu-nav li {
            margin-bottom: 1.5rem;
            overflow: hidden;
        }
        .menu-nav a {
            color: rgb(0, 0, 0);
            text-decoration: none;
            font-size: 1.2rem;
            font-weight: 300;
            letter-spacing: 1px;
            padding: 1rem 0;
            display: block;
            border-bottom: 1px solid transparent;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .menu-nav a::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }
        .menu-nav a:hover::before {
            left: 100%;
        }
        .menu-nav a:hover {
            color: #000000;
            border-bottom-color: rgba(255, 255, 255, 0.3);
            transform: translateX(10px);
        }
        .menu-footer {
            margin-top: auto;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }
        .menu-social {
            display: flex;
            gap: 1rem;
        }
        .menu-social a {
            color: rgb(0, 0, 0);
            padding: 0.5rem;
            border-radius: 50%;                      
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .menu-social a:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }
        /* Update menu button to be more visible */
        .menu-btn {
            background: none;
            border: none;
            color: white;
            font-size: 1rem;
            cursor: pointer;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            transition: all 0.3s ease;
        }
        .menu-btn:hover {
            border-color: rgba(255, 255, 255, 0.5);
        }
        /* Mobile responsiveness for menu */
        @media (max-width: 768px) {
            .slide-menu {
                width: 280px;
                padding: 1.5rem;
            }                        
            .menu-nav a {
                font-size: 1.1rem;
            }
        }
        @media (max-width: 480px) {
            .slide-menu {
                width: 100%;
                max-width: 280px;
            }
        }
        /* Hero Image Styles */
        .hero-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        .hero-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            transition: transform 0.3s ease;
        }
        .hero-image img:hover {
            transform: scale(1.02);
        }
        /* Popup overlay */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.6);
            backdrop-filter: blur(4px);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 2000;
        }

        /* Modal box */
        .modal-box {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 2rem;
            max-width: 400px;
            width: 90%;
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
            animation: fadeInUp 0.3s ease;
            position: relative;
            text-align: center;
        }

        /* Close button */
        .modal-close {
            position: absolute;
            top: 12px;
            right: 16px;
            font-size: 1.5rem;
            cursor: pointer;
            color: #555;
            transition: color 0.2s;
        }
        .modal-close:hover {
            color: #000;
        }

        /* Message styling */
        .modal-message {
            padding: 1rem;
            border-radius: 8px;
            margin-top: 1rem;
            font-weight: 500;
        }
        .modal-message.success { background: #d4edda; color: #155724; }
        .modal-message.info { background: #d1ecf1; color: #0c5460; }
        .modal-message.error { background: #f8d7da; color: #721c24; }

        /* Animation */
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <!-- Menu Overlay -->
    <div class="menu-overlay" id="menuOverlay">
        <div class="slide-menu" id="slideMenu">
            <div class="menu-header">
                <div class="menu-logo">{{ shop.name | upcase }}</div>
                <button class="menu-close" id="menuClose">&times;</button>
            </div>
            <nav class="menu-nav">
                <ul>
                    <li><a href="{{ routes.root_url }}">Home</a></li>
                    {% for link in linklists.main-menu.links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                    <li><a href="{{ routes.collections_url }}">All Collections</a></li>
                    <li><a href="{{ routes.cart_url }}">Cart</a></li>
                    {% if shop.customer_accounts_enabled %}
                        {% if customer %}
                            <li><a href="{{ routes.account_url }}">Account</a></li>
                            <li><a href="{{ routes.account_logout_url }}">Logout</a></li>
                        {% else %}
                            <li><a href="{{ routes.account_login_url }}">Login</a></li>
                            <li><a href="{{ routes.account_register_url }}">Register</a></li>
                        {% endif %}
                    {% endif %}
                </ul>
            </nav>
            <div class="menu-footer">
                <div class="menu-social">
                    {% if settings.social_twitter_link != blank %}
                    <a href="{{ settings.social_twitter_link }}" aria-label="X (formerly Twitter)">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                    </a>
                    {% endif %}
                    {% if settings.social_instagram_link != blank %}
                    <a href="{{ settings.social_instagram_link }}" aria-label="Instagram">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                            <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                        </svg>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <button class="menu-btn" id="menuBtn">Menu</button>
                                                
            <div class="logo-container floating">
                <div class="logo-circle">
                   {% if settings.logo != blank %}
                   <img src="{{ settings.logo | img_url: '100x100' }}" alt="{{ shop.name }}">
                   {% else %}
                   <img src="{{ 'logo.svg' | asset_url }}" alt="{{ shop.name }}">
                   {% endif %}
                </div>
                <h1 class="brand-name">{{ shop.name }}</h1>
            </div>
                                                
            <div class="header-right">
                <div class="social-links">
                    {% if settings.social_twitter_link != blank %}
                    <a href="{{ settings.social_twitter_link }}" class="social-link" aria-label="X (formerly Twitter)">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                    </a>
                    {% endif %}
                    {% if settings.social_instagram_link != blank %}
                    <a href="{{ settings.social_instagram_link }}" class="social-link" aria-label="Instagram">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                            <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                        </svg>
                    </a>
                    {% endif %}
                </div>
                <div class="language">{{ request.locale.name }}</div>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-image" id="heroImage">
            {% if section.settings.hero_image != blank %}
            <img src="{{ section.settings.hero_image | img_url: '1920x1080' }}" alt="{{ section.settings.hero_title }}">
            {% else %}
            <img src="{{ '1.jpg' | asset_url }}" alt="{{ shop.name }} Luxury Fashion">
            {% endif %}
        </div>
        <div class="hero-overlay"></div>
        <div class="hero-content">                       
            <div class="hero-text fade-in" style="position: absolute; bottom: 48px;">
                <a href="{{ routes.collections_url }}">
                    <button class="cta-button">{{ section.settings.hero_button_text | default: 'Discover Now' }}</button>
                </a>
            </div>
        </div>
    </section>

    <!-- Featured Collection -->
    <section class="featured-collection">
        <div class="container">
            <div class="section-header fade-in">
                <p class="section-subtitle">{{ section.settings.featured_subtitle | default: 'Featured Collection' }}</p>
                <h3 class="section-title">{{ section.settings.featured_title | default: 'Luxury Essentials' }}</h3>
            </div>
            <div class="collection-grid">
                {% assign featured_collection = collections[section.settings.featured_collection] %}
                {% if featured_collection != blank %}
                    {% for product in featured_collection.products limit: 3 %}
                    <div class="collection-item {% if forloop.first %}large-item{% endif %} grid-item">
                        <div class="item-image image-reveal">
                            <a href="{{ product.url }}">
                                {% if product.featured_image %}
                                <img src="{{ product.featured_image | img_url: '800x800' }}" alt="{{ product.title }}">
                                {% else %}
                                <img src="{{ 'product-placeholder.jpg' | asset_url }}" alt="{{ product.title }}">
                                {% endif %}
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="collection-item large-item grid-item">
                        <div class="item-image image-reveal">
                            <img src="{{ '2.jpg' | asset_url }}" alt="Cashmere Collection">                                                                          
                        </div>
                    </div>
                    <div class="collection-item grid-item">
                        <div class="item-image image-reveal">
                            <img src="{{ '3.jpg' | asset_url }}" alt="Leather Goods">
                        </div>
                    </div>
                    <div class="collection-item grid-item">
                        <div class="item-image image-reveal">
                            <img src="{{ '4.jpg' | asset_url }}" alt="Footwear">                                                                                 
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

    <!-- Split Image Section -->
    <section class="split-section">
        <div class="split-item slide-in-left">
            <div class="split-image image-reveal">
                {% if section.settings.split_image_1 != blank %}
                <img src="{{ section.settings.split_image_1 | img_url: '800x600' }}" alt="{{ section.settings.split_title_1 }}">
                {% else %}
                <img src="{{ '5.jpg' | asset_url }}" alt="Craftsmanship">
                {% endif %}
            </div>
            <div class="split-overlay"></div>
            <div class="split-content">
                <h3>{{ section.settings.split_title_1 | default: 'Artisan Craftsmanship' }}</h3>
                <p>{{ section.settings.split_text_1 | default: 'Every piece tells a story of dedication and skill' }}</p>
            </div>
        </div>
        <div class="split-item slide-in-right">
            <div class="split-image image-reveal">
                {% if section.settings.split_image_2 != blank %}
                <img src="{{ section.settings.split_image_2 | img_url: '800x600' }}" alt="{{ section.settings.split_title_2 }}">
                {% else %}
                <img src="{{ '6.jpg' | asset_url }}" alt="Sustainability">
                {% endif %}
            </div>
            <div class="split-overlay"></div>
            <div class="split-content">
                <h3>{{ section.settings.split_title_2 | default: 'Fine Luxury' }}</h3>
                <p>{{ section.settings.split_text_2 | default: 'Committed to timeless design' }}</p>
            </div>
        </div>
    </section>

