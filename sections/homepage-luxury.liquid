            <div class="gallery-grid">
                <div class="gallery-item large-gallery-item grid-item">
                    <div class="gallery-image image-reveal">
                        <img src="{{ 'gallery-main.jpg' | asset_url }}" alt="Lifestyle">
                    </div>
                </div>
