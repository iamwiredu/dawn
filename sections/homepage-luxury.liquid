    <!-- Newsletter Section -->
    <section class="newsletter">
        <div class="newsletter-background" id="newsletterBg">
            {% if section.settings.newsletter_bg != blank %}
            <img src="{{ section.settings.newsletter_bg | img_url: '1920x1080' }}" alt="Newsletter background">
            {% else %}
            <img src="{{ '11.jpg' | asset_url }}" alt="Newsletter background">
            {% endif %}
        </div>
        <div class="newsletter-overlay"></div>
        <div class="newsletter-content fade-in">
            <h3>{{ section.settings.newsletter_title | default: 'Stay Connected' }}</h3>
            <p>{{ section.settings.newsletter_text | default: 'Be the first to discover our latest collections and exclusive events' }}</p>
            {% form 'customer' %}
            <div class="newsletter-form">
                <input type="email" name="contact[email]" placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}" class="email-input" required>
                <input type="hidden" name="contact[tags]" value="newsletter">
                <button class="subscribe-btn" type="submit">{{ section.settings.newsletter_button | default: 'Subscribe' }}</button>
            </div>
            {% endform %}
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-column fade-in">
                    <h4>Collections</h4>
                    <ul>
                        <li>
                            {% if settings.logo != blank %}
                            <img src="{{ settings.logo | img_url: '100x100' }}" alt="{{ shop.name }}">
                            {% else %}
                            <img src="{{ 'logo-white.svg' | asset_url }}" alt="{{ shop.name }}">
                            {% endif %}
