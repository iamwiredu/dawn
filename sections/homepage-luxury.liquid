                    {{ 'general.newsletter_form.confirmation' | t }}
                </div>
                {% endif %}
                
                {% comment %} Error messages {% endcomment %}
                {% if form.errors %}
                <div class="modal-message error">
                    {{ form.errors | default_errors }}
                </div>
                {% endif %}
            </div>
        </div>
